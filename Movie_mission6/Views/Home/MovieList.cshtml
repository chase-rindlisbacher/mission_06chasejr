@{
    ViewData["Title"] = "Movie List";
}
@model List<MovieResponse> 

<table class="table table-bordered">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>        
    </thead>
    <tbody>
        @*Will list out the movies info for each movie*@
        @foreach (var x in Model)
            {
        <tr>
            <td>@x.Category.Category</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.Lent_to</td>
            <td>@x.Notes</td>
            @*Will pass the movie's ID for editing or deleting actions.'*@
            <td><a asp-controller="Home" asp-action="Edit" asp-route-MovieID="@x.MovieID">Edit</a></td>
            <td><a asp-controller="Home" asp-action="Delete" asp-route-MovieID="@x.MovieID">Delete</a></td>
        </tr>
            }
    </tbody>
</table>
